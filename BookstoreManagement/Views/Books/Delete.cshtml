@model BookstoreManagement.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center" style="color: #F5A623;">Delete Confirmation</h1>

<h4 class="text-muted text-center">Are you sure you want to delete this book?</h4>
<hr style="border-top: 2px solid #50E3C2;" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2" style="color: #333333;">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2" style="color: #333333;">Author</dt>
            <dd class="col-sm-10">@Model.Author</dd>
            <dt class="col-sm-2" style="color: #333333;">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2" style="color: #333333;">Genre</dt>
            <dd class="col-sm-10">@Model.Genre</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group text-center">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn" style="background-color: #50E3C2; color: white;">Cancel</a>
    </div>
</form>
